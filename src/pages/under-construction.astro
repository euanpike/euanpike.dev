---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout pageTitle="Under Construction">
  <div class="min-h-[60vh] flex flex-col items-center justify-center text-center px-4">
    <h1 class="text-3xl md:text-5xl font-mono font-bold text-white mb-6">
      Under Construction
    </h1>
    <p class="text-neutral-300 font-sans text-lg mb-8 max-w-lg">
      This section is currently being built. Please check back later for updates.
    </p>
    <a
      href="/"
      class="text-white font-mono hover:text-blue-400 underline decoration-2 underline-offset-4 transition-colors"
    >
      &larr; Return to Home
    </a>
  </div>
</BaseLayout>